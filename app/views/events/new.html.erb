<!-- , event: @event, survey: nil  -->
<div class="setup-tabs">
  <ul id="setup-nav" class="list-inline tabs-underlined">
    <li>
      <%= link_to "Créer mon évènement", new_event_path, class: "tab-underlined active" %>
    </li>
    <li>
      <%= link_to "Sondage (optionnel)", '#', class: "tab-underlined" %>
    </li>
      <li>
        <%= link_to "Inviter des participants", '#', class: "tab-underlined" %>
    </li>
